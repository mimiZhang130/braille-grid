{
  "manifest_version": 3,
  "name": "text2braille",
  "description": "Base Level Extension",
  "version": "0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
          "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/service-worker.js",
    "type": "module"
  },
  "host_permissions": [
        "http://localhost:3000/*"
  ],
  "permissions": [
    "tabs",
    "windows"
  ]
}
